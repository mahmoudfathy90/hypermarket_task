<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style parent="@style/ThemeOverlay.AppCompat.ActionBar" name="ToolbarTheme">
        <item name="colorControlNormal">@color/white</item>
    </style>





    <style name="textFontBoldStyle" parent="android:TextAppearance">
        <item name="android:textDirection">locale</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/font_standard</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="titleFontStyle" parent="android:TextAppearance">
        <item name="android:textDirection">locale</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>